<h2>Presentations</h2>

<% @presentations.each do |presentation| %>
<div class="col-xs-12 col-sm-4 col-md-4">
  <div class="thumbnail">
    <%= link_to image_tag("image.svg", size: '350x350'), presentation_path(presentation) %>
    <div class="caption">
      <h4><%= link_to truncate(presentation.title), presentation_path(presentation) %></h4>
      <p><a href="#" class="btn btn-primary" role="button">Like</a> <a href="#" class="btn btn-default" role="button">Download</a> <a href="#" class="btn btn-default" role="button">Share</a></p>
    </div>
  </div>
</div>
<% end %>